<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanat.calculator.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="4"
        android:stretchMode="columnWidth"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_columnSpan="4"
            android:gravity="right"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="top"
            android:cursorVisible="false"
            android:enabled="true"
            android:focusable="false"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:textSize="30dp"
            android:text="0"
            android:layout_rowSpan="1">

            <requestFocus />
        </EditText>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:text="7"
            android:id="@+id/button7"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/button_blue"
            android:contentDescription="7"
            android:layout_row="1" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:text="8"
            android:id="@+id/button8"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/button_blue"
            android:contentDescription="8"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="9"
            android:id="@+id/button9"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal"
            android:contentDescription="9"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="/"
            android:id="@+id/buttonDivide"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:text="4"
            android:id="@+id/button4"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/button_blue"
            android:contentDescription="4"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="5"
            android:id="@+id/button5"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal"
            android:contentDescription="5"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="6"
            android:id="@+id/button6"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal"
            android:contentDescription="6"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="*"
            android:id="@+id/buttonMultipli"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="1"
            android:id="@+id/button1"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal"
            android:contentDescription="1"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="2"
            android:id="@+id/button2"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal"
            android:contentDescription="2"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="3"
            android:id="@+id/button3"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal"
            android:contentDescription="3"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="-"
            android:id="@+id/buttonSubtract"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="0"
            android:id="@+id/buttonZero"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal"
            android:contentDescription="0"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="."
            android:id="@+id/buttonDot"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="%"
            android:id="@+id/buttonPercent"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_blue"
            android:text="+"
            android:id="@+id/buttonAdd"
            android:textSize="20dp"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_red"
            android:text="CE"
            android:id="@+id/buttonDel"
            android:textSize="25dp"
            android:layout_columnSpan="1"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_red"
            android:text="C"
            android:id="@+id/buttonClear"
            android:textSize="25dp"
            android:layout_columnSpan="1"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="155dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_green"
            android:text="="
            android:id="@+id/buttonResult"
            android:textSize="25dp"
            android:layout_columnSpan="2"
            android:onClick="buttonClick"
            android:gravity="center_vertical|center_horizontal" />

    </GridLayout>
</RelativeLayout>
